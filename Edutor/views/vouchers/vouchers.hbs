<style>
  #example1 {
    padding: 30px;
    box-shadow: 0px 0.5px 3px grey;
    margin: 15px;
  }
  .button {
    background-color: #5CBF8F; /* Green */
    border: none;
    color: white;
    padding: 10px 85px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
  }
  .table-condensed td {
    border: none !important;

    }


</style>

<div class="row" style="width:120%; margin-left:-10%">
  <h2 style="font-size: 22px; margin-top: 15px;"><b>Your vouchers</b></h2>

  <a href="/vouchers/create" style="font-size: 13px; margin-top: 25px;margin-left:-12.5%;text-decoration: underline;"><br><span><i class="fa fa-plus-circle" aria-hidden="true"></i></span>&nbsp; Create new voucher</a>
  <div class="table-responsive cart_info">
    <table class="table table-condensed">
      <tbody>
        <tr>
          <td style="width: 70%;">
            {{#if vouchersbythisuser}}
            {{#each vouchersbythisuser}}
            <div id="example1" style="margin-left: -7px;">
              <h5 style="text-align: left;">{{voucher_code}}<br><span style="font-size:13px;">Voucher Name: {{voucher_name}}</span></h5>
              <form action="/cart/delete-cart" method="POST">
                <input type="hidden" name="voucherID" value="{{id}}">
                <button type="submit" style="float:right;border:none;background-color:white;"><i class="fa fa-trash" aria-hidden="true"></i></button>
              </form>
              <h4 style="text-align:right; color:green;margin-top:-5%;"><b>{{discount}}</b></h4>
            </div>
            {{/each}}
          </td>
        </tr>
            {{!-- <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{qty}}</td>
            <td>{{Multiply price qty}}</td> --}}


          {{else}}
          <h4 style="font-size: 14px;margin-left:-0.9%;margin-top:20px;">No vouchers created by you yet!</h4>
          {{/if}}


      </tbody>
    </table>