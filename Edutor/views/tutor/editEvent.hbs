<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <!---<title> Responsive Registration Form | CodingLab </title>--->
    <link rel="stylesheet" href="/css/formfield.css">
</head>

<body>
    <div class="container">
        <div class="title">Edit Event</div>
        <div class="content">
            <form method="POST" action="">
                <div class="user-details mb-3">
                    <div class="input-box mb-3">
                        <span class="details">Title</span>
                        <input type="text" placeholder="Enter Event Title" id="title" onblur="initialisedTitle()"value="{{event.title}}"name="title" class="form-control" required>
                    </div>
                    {{!-- <div class="input-box mb-3">
                        <span class="details">Image</span>
                        <input type="file" placeholder="Enter Image" name="image" class="form-control"
                            accept="image/png, image/jpeg, image/jpg" required>
                    </div> --}}
                    <div class="text-danger small mb-2" id="cover" style="display:none"></div>
                    <div class="input-box mb-3">
                        <label for="description" class="details">Description</label>
                        <textarea class="form-control" placeholder="Enter description of course" id="description" name="description" rows="5" maxlength="2000">{{event.description}}</textarea>
                        {{!-- <span class="details">Description</span>
                        <input type="text" class="form-control" placeholder="Enter description of course"
                            name="description" required> --}}
                    </div>
                    <div class="input-box mb-3">
                        <span class="details">Start Date</span>
                        <input id="datepicker" class="form-control" name="startdate" value="{{formatDate event.startdate 'DD/MM/YYYY'}}" readonly required>
                    </div>
                    <div class="input-box mb-3">
                        <span class="details">End Date</span>
                        <input class="form-control" id="datepick" name="enddate" value="{{formatDate event.enddate 'DD/MM/YYYY'}}" readonly required>
                    </div>
                    <div class="input-box mb-3">
                        <span class="details">Start time</span>
                        <input type="text" class="form-control" name="starttime" value="{{event.starttime}}" required>
                    </div>
                    <div class="input-box mb-3">
                        <span class="details">End time</span>
                        <input type="text" class="form-control" name="endtime" value="{{event.endttime}}" required>
                    </div>
                    <div class="input-box mb-3">
                        <span class="details">Max No. of People</span>
                        <input type="text" class="form-control" name="people" value="{{event.people}}" required>
                    </div>
                    <div class="input-box mb-3">
                        <label for="status">Online/In Person:</label>
                        <select name="status">
                            <option value="In Person">In Person</option>
                            <option value="Online">Online</option>
                        </select>
                    </div>
                </div>
                <div class="button">
                    <input type="submit">
                </div>
            </form>
        </div>
    </div>

</body>

<script>
    $('#datepicker').datepicker({
        format: "dd/mm/yyyy",
        
    });
    $('#datepick').datepicker({
        format: "dd/mm/yyyy",
        
    });
</script>

</html>