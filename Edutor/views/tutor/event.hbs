{{!-- view to show mainview of consultation slots --}}

<head>
    <link rel="stylesheet" href="/css/catalogue.css">
</head>

<body>

    <section class="section-products">
        <div>
            <a href="/tutor/event/create">
                <p><span><i class="fa fa-plus" aria-hidden="true"></i></span> Create Event</p>
            </a>
        </div>
        <div class="container">
            {{#if event}}
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h2>Your Events</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {{#each event}}
                <!-- Single Product -->
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div id="product-1" class="single-product">
                        <div class="part-1">
                            <ul>
                                <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
                                <li><a href="#"><i class="fas fa-heart"></i></a></li>
                                <li><a href="#"><i class="fas fa-plus"></i></a></li>
                                <li><a href="#"><i class="fas fa-expand"></i></a></li>
                            </ul>
                        </div>
                        <div class="part-2">
                            <h3 class="product-title">{{title}}</h3>
                            <h4 class="product-description">Description: {{description}}</h4>
                            <h5 class="product-date">Date:{{formatDate startdate 'DD MMM YYYY'}} ~ {{formatDate enddate
                                'DD MMM YYYY'enddate}} </h5>
                            <h6 class="product-time">Time:{{starttime}} ~ {{endtime}} </h6>
                            <h7 class="product-status">{{status}} </h7>
                            {{!-- <h8 class="product-price">{{Price}} </h8> --}}
                        </div>
                        <div>
                            <a href="/tutor/event/editEvent/{{id}}" class="card-link mb-2">
                                <i class="fas fa-pencil-alt"></i>
                                Edit
                            </a>
                            <a href="/tutor/event/deleteEvent/{{id}}" class="card-link" data-toggle="confirmation" data-title="Confirm delete?">
                                <i class="far fa-trash-alt"></i>
                                Delete
                            </a>
                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
            {{else}}
            <h2>No Events</h2>
            {{/if}}


        </div>
    </section>
</body>