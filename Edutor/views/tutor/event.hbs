{{!-- view to show mainview of consultation slots --}}

<head>
    <link rel="stylesheet" href="/css/catalogue.css">
</head>

<body>


    <section class="section-products">
        <div class="container">
            <div>
                <a href="/tutor/event/create">
                    <p><span><i class="fa fa-plus" aria-hidden="true"></i></span> Create Event</p>
                </a>
            </div>
            {{#if event}}
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h2>Your Events</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {{#each event}}
                <!-- Single Product -->
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="single-product">

                        <div class="part-1">
                            <img src="{{eventURL}}" class="single-product">

                            <ul>
                                <li><a href="/tutor/event/editEvent/{{id}}"><i class="fas fa-pencil-alt"></i></a></li>
                                <li><a href="/tutor/event/deleteEvent/{{id}}"><i class="fas fa-trash-alt"></i></a></li>

                            </ul>
                        </div>
                        <div class="part-2">
                            <h3 class="product-title">{{title}}</h3>
                            <a href='../../student/review/{{userId}}'
                                style="font-size: 13px; color: #1E63CB; text-transform: lowercase; text-decoration: underline;"><b><i>View
                                        Your
                                        Reviews here</i></b></a>

                            <br>
                            <br>
                            <h4>Description:</h4>
                            <p class="product-description">{{ description}}</p>

                            <h4 class="product-date">Date:</h4>
                            <p class="product-date">{{formatDate startdate 'DD MMM YYYY'}} ~ {{formatDate enddate
                                'DD MMM YYYY'enddate}}</p>
                            <h4>Time:</h4>
                            <p class="product-time">{{formatDate starttime 'HH:mm'}} ~ {{formatDate endtime
                                'HH:mm'}}</p>
                            <h4 class="product-price">Price: ${{price}} </h4>


                        </div>

                    </div>

                </div>
                {{/each}}
            </div>
            {{else}}
            <h2>No Events</h2>
            {{/if}}


        </div>
    </section>
</body>