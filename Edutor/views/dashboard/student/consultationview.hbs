<head>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="common.js"></script>
    <script src="/js/croppie.js"></script>
    <style>
        #example1 {
            padding: 15px;
            box-shadow: 0px 0.5px 2px grey;
            margin: 15px;
        }

        .button {
            background-color: #5CBF8F;
            /* Green */
            border: none;
            color: white;
            padding: 10px 130px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .table-condensed td {
            border: none !important;
        }

        .select-wrap {
            border: 1px solid #777;
            width: 150px;
            background-color: #fff;
            position: relative;
        }

        .select-wrap label {
            font-size: 8px;
            text-transform: uppercase;
            color: #777;
            padding: 0 8px;
            margin-top: -1%;
            position: absolute;
            top: 6px;
        }

        select {
            background-color: #fff;
            border: 0px;
            height: 40px;
            font-size: 16px;
            padding-left: 3%;
            padding-top: 4%;
            font-size: 13px;
            margin-right: 4%;
        }
    </style>

</head>

<div class="container-fluid dashboard">
    <div class="container mt-5" style="margin-left:-10%">
        <h1 style="font-weight: 700; font-size: 20px; text-transform: uppercase;">Consultations</h1>
        <div id="example1" style="margin-left: -7px;width:120%;">
            <div class="table table-borderless table-responsive">

                <table class="table">
                    <tr>
                        <td>
                            <h6 style="font-size: 13px;">Title </h6>
                            <hr>
                        </td>
                        <td>
                            <h6 style="font-size: 13px;">Date</h6>
                            <hr>
                        </td>
                        <td>
                            <h6 style="font-size: 13px;">Time</h6>
                            <hr>
                        </td>
                        <td>
                            <h6 style="font-size: 13px;">Link</h6>
                            <hr>
                        </td>
                    </tr>
                    {{#if consult_detail}}
                    {{#each consult_detail}}
                    <tr>
                        <td>
                            <h6 style="font-size: 13px;">{{title}}</h6>
                            <hr>
                        </td>
                        <td>
                            <h6 style="font-size: 13px;">{{formatDate date 'DD MMM YYYY'}}</h6>
                            <hr>
                        </td>
                        <td>
                            <h6 style="font-size: 13px">{{formatDate start_time 'HH:mm'}} to {{formatDate
                                end_time 'HH:mm'}}</h6>
                            <hr>
                        </td>

                        <td>
                            <h6><a href="{{roomURL}}" style=" font-size: 15px;">Enter
                                Call
                                Room</a></h6>
                            <hr style="">
                        </td>
                    </tr>
                    {{/each}}
                    {{/if}}

                </table>
            </div>
        </div>

    </div>
</div>

</section>