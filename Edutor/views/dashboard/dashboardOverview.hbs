<head>

    <!-- Custom styles for this template -->
    <style>
        .btn-grey {
            background-color: #D8D8D8;
            color: #FFF;
        }

        .rating-block {
            background-color: #FAFAFA;
            border: 1px solid #EFEFEF;
            padding: 15px 15px 20px 15px;
            border-radius: 3px;
        }

        .bold {
            font-weight: 700;
        }

        .padding-bottom-7 {
            padding-bottom: 7px;
        }

        .review-block {
            background-color: #FAFAFA;
            border: 1px solid #EFEFEF;
            padding: 15px;
            border-radius: 3px;
            margin-bottom: 15px;
        }

        .review-block-name {
            font-size: 12px;
            margin: 10px 0;
        }

        .review-block-date {
            font-size: 12px;
        }

        .review-block-rate {
            font-size: 13px;
            margin-bottom: 15px;
        }

        .review-block-title {
            font-size: 15px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .review-block-description {
            font-size: 13px;
        }
    </style>
</head>

<body>
    <div class="container">

        <div class="row">
            <div class="col-sm-12">
                <hr />
                <div class="review-block">
                    {{#if consultations}}
                    {{#each consultations}}
                    <div class="row">
                        <div class="col-sm-3">
                            <img src="{{consultationURL}}" class="img-rounded">
                        </div>
                        <div class="col-sm-6">
                            <div class="review-block-title">{{title}}</div>
                            <br>
                            <div class="review-block-category">{{formatDate date 'DD MMM YYYY'}}, {{formatDate
                                start_time 'HH:mm'}} to {{formatDate end_time
                                'HH:mm'}}</div>
                            <br>
                            <div class="review-block-description">{{description}}</div>
                        </div>
                        <div class="col-sm-3">
                            <a href="/tutor/consultation/vidroom/{{id}}" class="btn btn-primary"
                                style="width:170px">Enter Call
                                Room</a>
                        </div>

                    </div>
                    <hr />
                    {{/each}}
                    {{else}}
                    <div class="row justify-content-center text-center">
                        <div>
                            <div class="header">
                                <h2>You have yet to receive any review.</h2>
                                <hr>
                            </div>
                        </div>
                    </div>

                    {{/if}}
                </div>
            </div>
        </div>

    </div> <!-- /container -->

    </div>
</body>