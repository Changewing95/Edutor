<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/eventdetail.css">
    <style>
    </style>
</head>

<body>
    <div class="container">

        <div class="title">Event Information </div>
        <div class="content card card-cover h-70 overflow-hidden" style="border-radius: 25px">
            <div class="row">

                <div class="col-sm-6 align-items-start" style="padding: 50px; align-items: left;">
                    <div class="d-flex flex-column">
                        <img class="card-img" src="{{event.eventURL}}"
                            style="border-radius: 25px; height:700px;width:500px;">
                    </div>
                </div>


                <div class="col-sm-6 align-items-start" style="text-align:left padding: 50px">
                    <div class="d-flex flex-column">
                        <h4 class="card-title" style="margin-top: 10%;">Event: {{event.title}}</h4>


                    </div>

                    <div class="d-flex flex-column">
                        <h4>Description</h4>
                        <p>{{event.description}}</p>
                    </div>

                    <div class="d-flex flex-column">
                        <h4>Details</h4>
                        <div class="d-flex flex-row">
                            <div>
                                <p><strong>Dates</strong></p>
                                <p class="card-text">{{formatDate startdate 'DD MMM YYYY'}} ~ {{formatDate enddate 'DD
                                    MMM YYYY'}} </p>

                                <div>
                                    <p><strong>Time</strong></p>
                                    <p class="card-text">{{formatDate starttime 'HH:mm'}} to {{formatDate endtime
                                        'HH:mm'}}
                                    </p>
                                </div>
                                <br>
                                <div class="d-flex flex-column">
                                    <p><strong>Price</strong></p>
                                    <p class="card-text">${{event.price}}</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="hstack gap-1 d-flex justify-content-end" style="padding: 50px">

                    <div class="col-sm-3">
                        <a href="/student/event/main" class="btn btn-primary"
                            style="width:170px;margin-top:-50%">Back</a>
                    </div>

                    <div class="col-sm-3" style="margin-left: 40%;margin-top:-6%;">
                        <form action="/cart/addtoCart" method="POST">
                            <input type="hidden" name="id" value={{event.id}}>
                            <input type="hidden" name="title" value="{{event.title}}">
                            <input type="hidden" name="price" value={{event.price}}>
                            <input type="hidden" name="author" value="Dylan">
                            <input type="hidden" name="tutorid" value={{event.userId}}>
                            <input type="hidden" name="image" value={{event.eventURL}}>
                            <input type="hidden" name="product_item" value="{{event.zoomlink}}">
                            <input type="hidden" name="productType" value="event">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-shopping-cart"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

</html>