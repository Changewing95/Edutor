{{!-- view to show mainview of consultation slots --}}

<head>
    <link rel="stylesheet" href="/css/catalogue.css">
</head>

<body>

    <section class="section-products">
        <div class="container">
            {{#if event}}
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h2>Events</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {{#each event}}
                <!-- Single Product -->
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="single-product">

                        <div class="part-1">
                            <img src="{{eventURL}}" class="single-product">

                            <ul>
                                <li>
                                    <form action="/cart/addtoCart" method="POST">
                                        <input type="hidden" name="id" value={{id}}>
                                        <input type="hidden" name="title" value={{title}}>
                                        <input type="hidden" name="price" value={{price}}>
                                        <input type="hidden" name="author" value="test">
                                        <input type="hidden" name="tutorid" value={{userId}}>
                                        <input type="hidden" name="image" value={{eventURL}}>
                                        <input type="hidden" name="product_item" value="nil">
                                        <input type="hidden" name="productType" value="event">
                                        <button type="submit" class="btn btn-primary"><i
                                                class="fa fa-shopping-cart"></i></button>
                                    </form>
                                </li>


                            </ul>
                        </div>
                        <div class="part-2">
                            <h3 class="product-title">{{title}}</h3>
                            <br>
                            <h4>Description:</h4>
                            <p class="product-description">{{ description}}</p>

                            <h4 class="product-date">Date:</h4>
                            <p class="product-date">{{formatDate startdate 'DD MMM YYYY'}} ~ {{formatDate enddate
                                'DD MMM YYYY'enddate}}</p>
                            <h4>Time:</h4>
                            <p class="product-time">{{formatDate starttime 'HH:mm'}} ~ {{formatDate endtime
                                'HH:mm'}}</p>
                            <h4 class="product-price">Price: ${{price}} </h4>

                        </div>

                    </div>

                </div>
                {{/each}}
            </div>
            {{else}}
            <h2>No Events</h2>
            {{/if}}


        </div>
    </section>
