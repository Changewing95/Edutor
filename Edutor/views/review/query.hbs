<body>
    <div class="container">
        <div class="title">Review</div>
        <div class="content" style="height: 800px">
            <form method="POST" action="" id="reviewForm">
                {{!-- description --}}
                <div class="input-box mb-3">
                    <label class="details" class="font-italic" for="prod_name">Leaving Review For:</label>
                    {{#if query}}
                    <input class="form-control" type="hidden" id="prod_name" name="prod_name" rows="1" maxlength="100"
                        value="{{query.id}}" readonly></input>
                    <input class="form-control" id="prod_name" name="prod_name" rows="1" maxlength="100"
                        value="{{query.title}}" readonly></input>
                    {{/if}}
                </div>

                {{!-- description --}}
                <div class="input-box mb-3">
                    <label class="details" class="font-italic" for="complain">Description</label>
                    <textarea class="form-control" id="complain" name="complain" rows="5" maxlength="10000"
                        placeholder="Enter Description here"></textarea>
                </div>

                {{!-- submit --}}
                <div class="button">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
</body>

</html>