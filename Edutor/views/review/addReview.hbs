    <style>
        .center .stars {
            height: 100px;
            width: 400px;
            text-align: center;
        }

        .stars input {
            display: none;
        }

        .stars label {
            float: right;
            align-items: left;
            font-size: 50px;
            color: lightgrey;
            margin: 0 5px;
            text-shadow: 1px 1px #bbb;
        }

        .stars label:before {
            content: '★';
        }

        .stars input:checked~label {
            color: gold;
            text-shadow: 1px 1px #c60;
        }

        .stars:not(:checked)>label:hover,
        .stars:not(:checked)>label:hover~label {
            color: gold;
        }

        .stars input:checked>label:hover,
        .stars input:checked>label:hover~label {
            color: gold;
            text-shadow: 1px 1px goldenrod;
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="title">Review</div>
        <div class="content" style="height: 800px">
            <form method="POST" action="" id="reviewForm">
                {{!-- file upload --}}
                <div class="hstack gap-3 d-flex ">
                    <div class="input-box mb-6">
                        {{!-- left, title --}}
                        <div>
                            <div class="input-box mb-3">
                                <label class="details" class="font-italic" for="title">Title</label>
                                <input class="form-control" id="title" name="title" rows="1" maxlength="100"
                                    placeholder="Enter feedback title here"></input>
                            </div>
                        </div>
                        {{!-- left, category --}}
                        <div>
                            <div class="input-box mb-3">
                                <span class="details">Category</span>
                                <input type="text" name="category" list="categories" class="form-control"
                                    placeholder="Enter category of course" required>
                                <datalist id="categories">
                                    <option value="Tutorial Packages"></option>
                                    <option value="Consultation"></option>
                                    <option value="Event"></option>
                                    <option value="General"></option>
                                </datalist>
                            </div>
                        </div>
                        {{!-- left vertical column, file upload --}}
                        <div>
                            <span class="details">Image</span>
                            <div class="custom-file mb-8">
                                <label class="custom-file-label" for="customFile">Choose File</label>
                                <input type="file" class="form-control custom-file-input" id="reviewUpload"
                                    name="reviewUpload" accept="image/png,image/jpeg,image/jpg,image/gif"
                                    style="width: 900px" required>
                            </div>
                            <div class="text-danger small mb-6" id="reviewErr" style="display:none"></div>
                        </div>
                        {{!-- left vertical column, rating --}}
                        <div>
                            <div class="input-box mb-3 ">
                                <span class="details">Rating</span>
                                <div class="stars">
                                    <input type="radio" id="five" name="rate" value="5">
                                    <label for="five"></label>
                                    <input type="radio" id="four" name="rate" value="4">
                                    <label for="four"></label>
                                    <input type="radio" id="three" name="rate" value="3">
                                    <label for="three"></label>
                                    <input type="radio" id="two" name="rate" value="2">
                                    <label for="two"></label>
                                    <input type="radio" id="one" name="rate" value="1">
                                    <label for="one"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- right, image display --}}
                    <div class="mb-4">
                        <img id="review" src="/profile/profile.png" alt="Consulation" height="250px" width="250px"
                            style="margin: 0 50px" class="border img-thumbnail img-fluid">
                        {{!—- Hidden field to submit URL of poster to the server --}}
                        <input id="reviewURL" type="hidden" name="reviewURL">
                    </div>
                </div>

                {{!-- description --}}
                <div class="input-box mb-3">
                    <label class="details" class="font-italic" for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3" maxlength="3000"
                        placeholder="Enter Description here"></textarea>
                </div>

                {{!-- google recaptcha --}}
                <div class="input-box mb-3 align-self-center" style="">
                    <div class="g-recaptcha" data-sitekey="6LdLCYogAAAAAFD2kxI4DzSqiVPQsB3m2lDA4Ra_">
                    </div>
                </div>

                {{!-- submit --}}
                <div class="button">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
