<div class="row" style="width:120%; margin-left:-10%">
  <h2 style="font-size: 22px; margin-top: 15px;"><b>Checkout</b></h2>
  <div class="table-responsive cart_info">
    <table class="table table-condensed">
      <tbody>
        <h3 style="font-size:15px; margin-top: 15px;"><b>1. Order Items</b></h3>
        <tr>
          <td style="width: 50%;">
            {{!-- <form action="/checkout/place_order" method="POST"> --}}
              <form action="/checkout/place_order" method="POST">


                {{#each cartitems}}
                <div id="example2" style="margin-left:4px;">
                  <h5 style="text-align:left;font-size:12px;">{{product_name}}<br><span style="font-size:9px;">A
                      {{product_type}} by {{author}}</span></h5>
                  <h6 style="text-align:right;margin-top:-5%;"><b>{{price}}</b></h6>
                  <input type="hidden" name="tutorID" id="tutorID" value="{{userId}}">
                  <input type="hidden" name="tutorID" id="tutorID" value="{{product_item}}">
                </div>
                <br>
                {{/each}}
                <br>
                <h3 style="font-size:15px; margin-left:-2%;margin-top: 15px;margin-bottom:15px;"><b>2. Payment</b></h3>
                {{#if orders}}
                {{#each orders}}
                <input type="hidden" name="oid" id="oid" value={{increaseOID order_id 1}}>
                {{/each}}
                {{else}}
                <input type="hidden" name="oid" id="oid" value=1>
                {{/if}}



                {{#if user}}
                <div>
                  <label>Name</label>
                  <input type="text" name="cust_name" id="cust_name" value="{{user.name}}" disabled />
                </div>
                <br>
                {{/if}}


                <div class="select-wrap">
                  <label>Country</label>
                  <select name="country" id="country" style="width: 100%;">
                    <option name="country" value="">---</option>
                    <option name="country" value="Singapore">Singapore</option>
                  </select>
                </div>

                <br>

                <label id="example3"><input type="radio" name="paym" id="paym" value="CreditCard"
                    onclick="text(0)">&nbsp;Credit Card</label>
                <label id="example3"><input type="radio" name="paym" id="paym" value="Paypal"
                    onclick="text(1)">&nbsp;Paypal</label>
                {{!--
                <div class="form-group" style="margin-top: 3%;">
                  <label for="exampleInputEmail1"></label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email">
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div> --}}

          </td>

          <td style="padding-left: 20%;">
            <table style="width: 100%; margin-left:3%">
              <tbody style="font-size: 14px;">
                <div id="example1" style="margin-left: -7px;margin-top:-7%">
                  <span style="font-size:16px;font-weight:bold;">Summary:</span><br>
                  <span style="font-size:13px;margin-top:2%;">Total: SGD {{total}}</span><br>
                  <hr>
                  <h6 style="font-size:11px;margin-top:-3%;font-weight:400;">Edutor is required by law to collect
                    applicable transaction taxes for purchases made in certain tax jurisdictions.<br>
                    By completing your purchase you agree to these Terms of Service.</h6>
                  <input type="hidden" name="cartTotal" value="{{total}}">
                  <input type="submit" class="button" value="Payment">
                  {{!-- <button type="submit" style="font-weight:bold;" class="button">Payment</button> --}}
                  </form>
                </div>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
