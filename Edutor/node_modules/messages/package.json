{
  "name": "messages",
  "version": "0.1.0",
  "description": "Text message generation",
  "repository": "https://github.com/eemeli/messages",
  "author": "Eemeli Aro <eemeli@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "!dist/*.test.js"
  ],
  "scripts": {
    "build": "babel -d dist src/",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --write src/*",
    "start": "npm run build && node -i -e 'msg = require(\".\").default'",
    "test": "jest src/"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.1.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "intl-pluralrules": "^1.0.0"
  }
}
